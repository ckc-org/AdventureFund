@keyframes fadeIn
    to
        opacity 1

.fade-in
    opacity 0
    animation fadeIn .5s 1
    animation-fill-mode forwards

@keyframes wave-animation
    5%, 45%
        transform rotate(-4deg)
    10%, 40%
        transform rotate(5deg)
    15%, 25%, 35%
        transform rotate(-5deg)
    20%, 30%
        transform rotate(4deg)
    45%
        transform rotate(0deg)

.wave-animation
    animation: wave-animation 5s cubic-bezier(.36, .07, .19, .97) both infinite;
